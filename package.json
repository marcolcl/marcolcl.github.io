{
  "name": "marcolcl.github.io",
  "version": "0.1.0",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "tsc",
    "build": "gatsby build --prefix-paths",
    "develop": "gatsby develop",
    "start": "gatsby develop",
    "deploy": "gh-pages -d public -b master --add",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1"
  },
  "dependencies": {
    "gatsby": "^2.20.12",
    "gatsby-plugin-typescript": "^2.3.1",
    "gatsby-plugin-typescript-checker": "^1.1.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "gatsby-cli": "^2.11.5",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcolcl/marcolcl.github.io"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
